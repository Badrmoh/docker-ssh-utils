#!/command/with-contenv bash

DHOME="${DHOME:-"/home/$DUSER"}"

# Configure SSH user
mkdir -p ${DHOME}
groupmod -g ${DGID} ${DGROUP}
usermod -u ${DUID} ${DUSER} -g ${DGID} -d ${DHOME}
chown -R ${DUSER}:${DGROUP} ${DHOME}
chown -R ${DUSER}:${DGROUP} ${DHOME}/.[^.]*

echo "
-------------------------------------
ðŸ‘¨ Running Services as User: $DUSER
-------------------------------------
"
